<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Username:"
        android:id="@+id/loginTxtUsername"
        android:layout_alignBottom="@+id/registerDialogEditUsername"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/registerDialogEditUsername"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/registerDialogEditPassword"
        android:layout_alignStart="@+id/registerDialogEditPassword" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:password="true"
        android:id="@+id/registerDialogEditPassword"
        android:layout_below="@+id/registerDialogEditUsername"
        android:layout_alignLeft="@+id/registerDialogEditConfirmPassword"
        android:layout_alignStart="@+id/registerDialogEditConfirmPassword" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Password:"
        android:id="@+id/loginTxtPassword"
        android:layout_alignBottom="@+id/registerDialogEditPassword"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:password="true"
        android:id="@+id/registerDialogEditConfirmPassword"
        android:layout_below="@+id/registerDialogEditPassword"
        android:layout_toRightOf="@+id/textView"
        android:layout_toEndOf="@+id/textView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Confirm Password:"
        android:id="@+id/textView"
        android:layout_alignBottom="@+id/registerDialogEditConfirmPassword"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm"
        android:id="@+id/registerDialogButtonConfirm"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:id="@+id/registerDialogButtonCancel"
        android:layout_below="@+id/registerDialogEditConfirmPassword"
        android:layout_toRightOf="@+id/registerDialogButtonConfirm"
        android:layout_toEndOf="@+id/registerDialogButtonConfirm" />

</RelativeLayout>
